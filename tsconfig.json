{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "downlevelIteration": true,
    "paths": {
      "@schema": ["src/app/schema"],
      "@src/*": ["src/*"],
      "@core/*": ["src/app/core/*"],
      "@chrome/*": ["src/app/chrome/*"],
      // legacy stuff
      "@assets/*": [
        "src/deprecated/pkg/assets/index",
        "src/deprecated/pkg/assets/*"
      ],
      "@merchant/*": [
        "src/deprecated/pkg/merchant/index",
        "src/deprecated/pkg/merchant/*"
      ],
      "@plus/*": ["src/deprecated/pkg/plus/index", "src/deprecated/pkg/plus/*"],
      "@schema/*": [
        "src/deprecated/pkg/schema/index",
        "src/deprecated/pkg/schema/*"
      ],
      "@toolkit/*": [
        "src/deprecated/pkg/toolkit/index",
        "src/deprecated/pkg/toolkit/*"
      ],
      "@next-toolkit/*": ["src/toolkit/index", "src/toolkit/*"],
      "@public/*": ["public/index", "public/*"],
      // modified legacy stuff
      "@stores/*": ["src/app/core/stores/*"],
      "@legacy/core/*": ["src/app/core/toolkit/*"],
      //// temp solutions for deprecated code
      "@toolkit/styling": ["src/app/core/toolkit/styling"],
      "@next-toolkit/Image": ["src/app/core/components/Image"],
      "@next-toolkit/Link": ["src/app/core/components/Link"]
    },
    "experimentalDecorators": true,
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "sentry.client.config.js",
    "sentry.server.config.js",
    "jest.config.js",
    "jest.setup.js",
    "build-tools/ast-util.js",
    "build-tools/localization-plugin.js",
    "scripts/create-certs.js",
    "server.js"
  ],
  "exclude": ["node_modules"]
}
