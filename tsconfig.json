{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "downlevelIteration": true,
    "paths": {
      "@add-edit-product/*": ["src/app/add-edit-product/*"],
      "@all-products/*": ["src/app/all-products/*"],
      "@chrome/*": ["src/app/chrome/*"],
      "@core/*": ["src/app/core/*"],
      "@core-builder/*": ["src/app/core-builder/*"],
      "@home/*": ["src/app/home/*"],
      "@infractions/*": ["src/app/infractions/*"],
      "@landing-pages/*": ["src/app/landing-pages/*"],
      "@performance/*": ["src/app/performance/*"],
      "@product-compliance-center/*": ["src/app/product-compliance-center/*"],
      "@products-csv/*": ["src/app/products-csv/*"],
      "@promotions/*": ["src/app/promotions/*"],
      "@schema": ["src/app/schema"],
      "@deprecated/*": ["src/deprecated/*"],
      "@public/*": ["public/index", "public/*"]
    },
    "experimentalDecorators": true,
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "sentry.client.config.js",
    "sentry.server.config.js",
    "jest.config.ts",
    "jest.setup.js",
    "build-tools/ast-util.js",
    "build-tools/localization-plugin.js",
    "scripts/create-certs.js",
    "server.js",
    "lighthouserc.js",
    "tests/*"
  ],
  "exclude": ["node_modules"]
}
